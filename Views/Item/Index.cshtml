@model IEnumerable<Small_ERP.Models.Item>

@{
    ViewData["Title"] = "Index";
}

<h1>All Items</h1>

<p>
    <a class="btn btn-purple" asp-action="ItemMovements">Item Movements</a>
</p>

<p>
    <a class="btn btn-purple" asp-action="New">Add New Item</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Purchasing Price
            </th>
            <th>
                Selling Price
            </th>
            <th>
                Start Period Balance
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                    @item.Name
            </td>
            <td>
                    @item.Purchasing_Price
            </td>
            <td>
                    @item.Selling_Price
            </td>
            <td>
                @item.Start_Period_Balance
            </td>
            <td>
                    <a class="btn btn-purple" asp-controller="Item" asp-action="Edit" asp-route-Id="@item.Id">Edit</a>
                    <a class="btn btn-purple" asp-controller="Item" asp-action="Delete" asp-route-Id="@item.Id" onclick="DeleteAlert()">Delete</a>
               
            </td>
        </tr>
}
    </tbody>
</table>


            